version: 2.1
orbs:
  twistcli: twistlock/twistcli-scan@1.0.5
jobs:
  docker-build-and-save:
    executor: twistcli/default
    steps:
      - checkout
      - run: 'docker build -t kazuhikotsuji/myimage:01 .'
      - run: mkdir -p workspace
      - run: 'docker save kazuhikotsuji/myimage:01 -o workspace/image.tar'
      - persist_to_workspace:
          root: workspace
          paths:
            - image.tar
  docker-push:
    executor: twistcli/default
    steps:
      - checkout
      - run: 'docker build -t kazuhikotsuji/myimage:01 .'
      - run:
          name: Push Image
          command: |
            echo $DOCKER_PW | docker login --username $DOCKER_USER --password-stdin docker.io
            docker push docker.io/kazuhikotsuji/myimage:01
workflows:
  scan-image:
    jobs:
      - docker-build-and-save
      - twistcli/scan-image:
          requires:
            - docker-build-and-save
          context: tl_scan_context
          image: 'kazuhikotsuji/myimage:01'
          image-tar: image.tar
          vuln-thresh: high
          comp-thresh: critical
          only-fixed: true
      - docker-push:
          requires:
            - twistcli/scan-image

